		{
			"name": "2. GraphQL - Users",
			"item": [
				{
					"name": "Create User (Alice)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { createUser(username: \\\"alice\\\", email: \\\"alice@example.com\\\") { id username email createdAt isOnline } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Create User (Bob)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { createUser(username: \\\"bob\\\", email: \\\"bob@example.com\\\") { id username email } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query { users { id username email isOnline createdAt } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get Online Users",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query { onlineUsers { id username } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				}
			]
		},
		{
			"name": "3. GraphQL - Rooms",
			"item": [
				{
					"name": "Create Room",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { createRoom(name: \\\"General\\\", description: \\\"General discussion room\\\", creatorId: \\\"{{userId}}\\\") { id name description memberCount } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						},
						"description": "Replace {{userId}} with an actual user ID from the Create User response"
					}
				},
				{
					"name": "Get All Rooms",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query { rooms { id name description memberCount members { username } } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Join Room",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { joinRoom(roomId: \\\"{{roomId}}\\\", userId: \\\"{{userId}}\\\") { id name memberCount members { username } } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						},
						"description": "Replace {{roomId}} and {{userId}} with actual IDs"
					}
				}
			]
		},
		{
			"name": "4. GraphQL - Messages",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { sendMessage(roomId: \\\"{{roomId}}\\\", senderId: \\\"{{userId}}\\\", content: \\\"Hello, this is a test message!\\\") { id content createdAt sender { username } } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						},
						"description": "Replace {{roomId}} and {{userId}} with actual IDs.\n\nThis will trigger:\n- SSE event to connected clients\n- Webhook POST to registered endpoints\n- Push notifications to room members"
					}
				},
				{
					"name": "Get Room Messages",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query { messages(roomId: \\\"{{roomId}}\\\", limit: 50) { id content type createdAt sender { username } } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get Room with Messages",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query { room(id: \\\"{{roomId}}\\\") { id name description members { id username } messages { id content createdAt sender { username } } latestMessage { content } } }\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/graphql",
							"protocol": "http",
							"host": ["localhost"],
							"port": "3000",
							"path": ["graphql"]
						}
					}
				}
			]
		},
		{
			"name": "5. SSE",
